                            <div class="col-md-6">
                                <label for="review" class="_arabic" data-translate="000ca79">Password</label>
                                <input type="password" class="form-control _arabic" name="Password" id="review" placeholder="Enter your password" required="">
                            </div>
                        </div>
                        <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="btn btn-solid w-auto" value="Create Account">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
