<section class="login-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login-register-form">
                    <form class="theme-card active" id="login-form" action="@Url.Action("Login_Register", "Account")" method="post" role="form" style="display: block;">
                        <div class="theme-card active" id="login-form" style="display: block;">
                            <div class="form-group">
                                <label for="email" class="_arabic frl" data-translate="00cn5">Email</label>
                                <input type="text" class="form-control _arabic" name="email" id="email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <label for="review" class="_arabic frl" data-translate="000ca79">Password</label>
                                <input type="password" class="form-control _arabic" name="password" id="password" placeholder="Enter your password">
                            </div>
                            <input type="submit" onclick="login();" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-solid _arabic" value="Log In">


                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 right-login">
                <h3 data-translate="000ca83" class="_arabic">New Customer</h3>
                <div class="theme-card authentication-right">
                    <h6 class="title-font _arabic" data-translate="000ca80">Create an Account</h6>
                    <p data-translate="000ca81" class="_arabic">
                        Sign up for a free account at our store. Registration is quick and easy. It allows you to be
                        able to order from our shop. To start shopping click register.
                    </p><a href="@Url.Action("Login_Register", "Account")" id="register-form-link" class="btn btn-solid _arabic" data-translate="000ca80">Create an Account</a>

                    @*<a href="@Url.Action("Checkout", "Order")"  class="btn btn-solid">Continue as Guest</a>*@
                </div>
            </div>
        </div>
    </div>
</section>
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <form id="register-form" class="theme-card" action="@Url.Action("Login_Register", "Account")" method="post" role="form" style="display: none;">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="email" class="_arabic" data-translate="000co66">Full Name</label>
                                <input type="text" class="form-control _arabic" name="FullName" id="fname" placeholder="FullName" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="review" class="_arabic" data-translate="00cn7">Mobile</label>
                                <input type="text" class="form-control _arabic" name="Mobile" id="lname" placeholder="Mobile" required="">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="email" class="_arabic" data-translate="000co20">Email</label>
                                <input type="email" class="form-control _arabic" name="Email" id="email" placeholder="Email" required="">
