<!-- breadcrumb End -->
<!--section start-->
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form">
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label for="email" data-translate="000co84" class="_arabic">Full Name</label>
                                <input type="text" class="form-control _arabic" name="FullName" id="fname" placeholder="FullName" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="review" data-translate="00cn7" class="_arabic">Mobile</label>
                                <input type="text" class="form-control _arabic" name="Mobile" id="lname" placeholder="Mobile" required="">
                            </div>
                        </div>
                        <div class="form-row row">
                            <div class="col-md-6">
                                <label for="email" class="_arabic" data-translate="000co20">Email</label>
                                <input type="email" class="form-control _arabic" name="Email" id="email" placeholder="Email" required="">
                            </div>
                            <div class="col-md-6">
                                <label for="review" class="_arabic" data-translate="000ca79">Password</label>
                                <input type="password" class="form-control _arabic" name="Password" id="review" placeholder="Enter your password" required="">
                            </div>
                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="btn btn-solid w-auto" value="Create Account">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->