
@{
    ViewBag.Title = "Wishlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>wishlist</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">wishlist</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="wishlist-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 table-responsive-xs">
                <table id="ytdTable" class="table cart-table">
                    <thead>
                        <tr>
                            <th class="plantmore-product-thumbnail">Images</th>
                            <th class="cart-product-name">Name</th>
                            <th class="plantmore-product-price">Price</th>
                            <th class="plantmore-product-stock-status">Stock Status</th>
                            <th class="plantmore-product-add-cart">Add to cart</th>
                            <th class="plantmore-product-remove">Remove</th>
                        </tr>
                    </thead>
                    <tbody class="wishlist-items">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row wishlist-buttons">
            <div class="col-12"><a href="@Url.Action("Index", "Home")" class="btn btn-solid">continue shopping</a> <a href="@Url.Action("Checkout", "Order")" class="btn btn-solid">check out</a></div>
        </div>
    </div>
</section>
<!--section end-->