
@model IEnumerable<Vitamito.Models.BLL.navigationBLL>


<nav id="main-nav" class="text-start">
    <div class="toggle-nav"><i class="fa fa-bars sidebar-bar"></i></div>
    <ul id="main-menu" class="sm pixelstrap sm-horizontal nav navbar-nav">
        <li>
            <div class="mobile-back text-end">Back<i class="fa fa-angle-right ps-2" aria-hidden="true"></i></div>
        </li>
        <li><a href="@Url.Action("Index" , "Home")">Home</a></li>

        <li>

        <li class="dropdown">

            <a href="@Url.Action("Shop" , "Shop", new { LocationID = 2195, Category = "", CategoryIDs = "",Searchtext = "",SortID=0})" class="dropdown-toggle has-submenu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Shop</a>

            <ul class="dropdown-menu">

                @foreach (var item in Model)
                {
                    <li>
                        <a href="@Url.Action("shop", "shop", new { LocationID = 2195, CategoryIDs = item.ID, Category = "",Searchtext = "",SortID=0})">@item.Name </a>
                        @if (item.SubCategories.Count > 0)
                        {
                            <ul class="mobview">
                                @foreach (var sub in item.SubCategories)
                                {
                                    <li><a href="@Url.Action("shop", "shop", new { Category = "", CategoryIDs = "", SubCategoryIDs = sub.ID ,ColorIDs = "",MinPrice = "",MaxPrice = "",Searchtext = "",SortID=0})" style="color:black !important;">@sub.Name</a></li>
                                }
                            </ul>
                        }

                    </li>

                }
            </ul>

        </li>
        <li class="mega" id="hover-cls">
            <a href="@Url.Action("About" , "Home")">About</a>
        </li>
        <li>
            <a href="@Url.Action("Contact" , "Home")">Contact</a>
        </li>

        @*<li>
            <a onclick="_lang(); return false;" id="_lang" style="cursor:pointer;">عربى</a>
        </li>*@

    </ul>
</nav>



<script>
    jQuery(document).ready(function () {
        
        var currLang = Cookies.get('lang');
        if (currLang == null || currLang == "" || currLang == undefined) {

            Cookies.set('lang', 'en', { expires: 365 });
            jQuery('#_lang').html('عربى');
        }
        if (currLang == "en") {
            jQuery('#_lang').html("عربى");
            jQuery("._arabic").css("direction", "ltr")
            jQuery("._arabic-text").css("text-align", "left")
        }
        else {
            jQuery('#_lang').html("English");
            jQuery('._ltrarabic').css("direction", "ltr")
            jQuery("._arabic").css("direction", "rtl")
        }
    });

    function _lang() {
        
        var currLang = Cookies.get('lang');
        //var currLang = localStorage.getItem("_lang");
        if (currLang == null || currLang == "") {
            Cookies.set('lang', 'en', { expires: 365 });
            jQuery('#_lang').html('عربى');
        }
        if (currLang == "en") {
            Cookies.set('lang', 'ar', { expires: 365 });
            jQuery('#_lang').html('English');
            location.reload();
        }
        if (currLang == "ar") {
            Cookies.set('lang', 'en', { expires: 365 });
            jQuery('#_lang').html('عربى');
            location.reload();
        }
    }
</script>