@model IEnumerable<Vitamito.Models.BLL.navigationBLL>
<li class="dropdown">
    <a href="@Url.Action("Shop" , "Shop", new { LocationID = 2195, Category = "", CategoryIDs = "",Searchtext = "",SortID=0})" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Category <span class="caret"></span></a>
    <ul class="dropdown-menu">
        @*@foreach (var item in ViewBag.categoryList)
        {
            <li><a href="@Url.Action("shop", "shop", new { LocationID = 2195, Category = "", CategoryIDs = "",Searchtext = "",SortID=0})">@item.Name</a></li>
        }*@
        @foreach (var item in Model)
        {
        <li>
            <a href="@Url.Action("shop", "shop", new { LocationID = 2195, Category = "", CategoryIDs = "",Searchtext = "",SortID=0})">@item.Name</a>

            @if (item.SubCategories.Count > 0)
            {
                <ul class="sub-menu">

                    @foreach (var sub in item.SubCategories)
                    {
                        <li><a href="@Url.Action("shop", "shop", new { Category = "", CategoryIDs = "", SubCategoryIDs = sub.ID ,ColorIDs = "",MinPrice = "RS0",MaxPrice = "RS50000",Searchtext = "",SortID=0})">@sub.Name</a></li>

                    }
                </ul>
            }

        </li>
        }
    </ul>
</li>
