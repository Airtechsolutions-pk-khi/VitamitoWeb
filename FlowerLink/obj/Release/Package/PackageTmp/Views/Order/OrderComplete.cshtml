@{
    ViewBag.Title = "Order Complete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .card {
        width: 350px;
        border: none;
        box-shadow: 0px 0px 10px 0px #a2a2a2;
        border-radius: 12px;
    }

    .circle-image img {
        border: 6px solid #fff;
        border-radius: 100%;
        padding: 9px;
        top: -28px;
        position: relative;
        width: 65px;
        height: 65px;
        border-radius: 100%;
        z-index: 1;
        background: #e7d184;
        cursor: pointer
    }

    .help-text {
        margin-top: -21px
    }

    .fw-500 {
        font-weight: 500 !important
    }
</style>
<div class="jumbotron main-content-wrap mb-0 section-ptb contact-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="search-error-wrapper">
                    @if (ViewBag.OrderNo == "Reject")
                    {
                        <h2 class="text-danger" style="font-size: 40px;" data-translate="00oc0">Order Cancel</h2>

                        <p class="home-link">Your Payment through card not successfully done. </p>
                        <a href="~/order/checkout" class="home-bacck-button">Try Again</a>
                    }
                    else
                    {
                        <h2 style="font-size: 40px;" data-translate="00oc3">THANK YOU</h2>
                        <h5 class="mb-1  font-weight-lighter" data-translate="00oc4">Order Number </h5>
                        <p class="mb-50 font-weight-bold">@ViewBag.OrderNo</p>
                       
                        @*<a href="~/home/index" class="home-bacck-button"></a>*@
                        <div class="container d-flex justify-content-center mt-5">
                            <div class="card text-center mb-5 p-2 pt-4">
                                <p class="home-link mb-0" data-translate="00oc5">Your Order was completed successfully</p>
                                <p class="home-link" data-translate="000cb91">@ViewBag.Status</p>
                                <small class="text-black-50" data-translate="000cb90">Recommend us to others by rating us <br> on GOOGLE!</small>
                                <div class="buttons mb-3 mt-4 px-5">
                                    @*<a class="btn btn-outline-dark btn-block" href="https://g.page/r/CXmr4gSC6RJqEAg/review" target="_blank">Yes, Rate it now</a>*@
                                    <a href="@Url.Action("Index" , "Home")" class="btn btn-outline-dark btn-block" data-translate="00oc6">Back to shop</a>
                                </div>
                            </div>
                        </div>
                        <script>localStorage.clear();</script>  
                    }
                </div>
            </div>
        </div>
    </div>
</div>
